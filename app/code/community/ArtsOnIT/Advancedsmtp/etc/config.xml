<config>
    <modules>
        <ArtsOnIT_Advancedsmtp>
            <version>0.1.7</version>
        </ArtsOnIT_Advancedsmtp>
    </modules>
    <global>
        <models>
                <core>
                    <rewrite>
                        <email_template>Mage_Advancedsmtp_Model_Email_Template</email_template>
                        <email>Mage_Advancedsmtp_Model_Email</email>
                    </rewrite>
                </core>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <ArtsOnIT_Advancedsmtp>
                    <files>
                        <default>Mage_AdvanceSmtp.csv</default>
                    </files>
                </ArtsOnIT_Advancedsmtp>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <advancedsmtp>
                                            <title>Advanced Smtp Settings</title>
                                        </advancedsmtp>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <advancedsmtp>
            <settings>
                <enabled>0</enabled>
                <auth>login</auth>
                <username></username>
                <password></password>
                <ssl>0</ssl>
                <host>localhost</host>
                <port>25</port>
                <ssltype></ssltype>
            </settings>
        </advancedsmtp>
    </default>
</config>